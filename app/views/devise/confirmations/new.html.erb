
<div class="border-form-div">
  <h3>Отправить повторно инструкции разблокировки</h3>

  <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, :autofocus => true, placeholder: 'Электронная почта' %><br />

    <%= f.submit "Отправить инструкции разблокировки", class: 'btn btn-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>