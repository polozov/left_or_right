<div class="border-form-div">
  <h3>Зарегистрироваться</h3>

  <%= form_for(resource, :as => resource_name,
    :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, :autofocus => true, placeholder: 'Электронная почта' %>
    <br />
    <%= f.text_field :username, placeholder: 'Никнэйм' %><br />
    <%= f.password_field :password, placeholder: 'Пароль' %><br />
    <%= f.password_field :password_confirmation, placeholder: 'Подтверждение пароля' %>
    <br />

    <%= f.submit "Зарегистрироваться", class: 'btn btn-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
