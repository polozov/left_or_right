<div class="border-form-div">
  <h3>Войти</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <%= f.email_field :email, :autofocus => true, placeholder: 'Электронная почта' %>
    <br />
    <%= f.password_field :password, placeholder: 'Пароль' %><br />
    <% if devise_mapping.rememberable? -%>
      <label class="checkbox"> <%= f.check_box :remember_me %> Запомнить меня </label>
    <% end -%>

    <%= f.submit "Войти", class: 'btn btn-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
